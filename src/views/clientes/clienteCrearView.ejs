<!doctype html>
<html lang="en">
<head>
    <title>Crear Cliente</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">

    <style>
        .container {
            max-width: 500px;
            margin: auto;
            padding-top: 20px;
        }

        a, button {
            margin-top: 10px;
        }
    </style>
</head>
<body>

<div class="container">
    <h1 class="title is-3">Crear Cliente</h1>

    <a class="button is-info" href="/clientes">Regresar</a>

    <form action="/clientes/crear" method="post" class="box">
        <div class="field">
            <label class="label" for="nombre">Nombre</label>
            <div class="control">
                <input class="input" type="text" name="nombre" placeholder="Alberto" required>
            </div>
        </div>

        <div class="field">
            <label class="label" for="apellido">Apellido</label>
            <div class="control">
                <input class="input" type="text" name="apellido" placeholder="Hernandez" required>
            </div>
        </div>

        <div class="field">
            <label class="label" for="edad">Edad</label>
            <div class="control">
                <input class="input" type="number" name="edad" placeholder="25" required>
            </div>
        </div>

        <div class="field">
            <label class="label" for="telefono">Tel√©fono</label>
            <div class="control">
                <input class="input" type="text" name="telefono" placeholder="99999999" required>
            </div>
        </div>

        <div class="field">
            <label class="label" for="ciudad">Ciudad</label>
            <div class="control">
                <input class="input" type="text" name="ciudad" placeholder="Comayagua" required>
            </div>
        </div>

        <div class="control">
            <button class="button is-primary" type="submit">Confirmar</button>
        </div>
    </form>
</div>

</body>
</html>
